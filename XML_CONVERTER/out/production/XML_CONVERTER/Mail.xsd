<?xml version="1.0" encoding="utf-8"?>
<xs:schema attributeFormDefault="unqualified" elementFormDefault="qualified" xmlns:xs="http://www.w3.org/2001/XMLSchema">
  <xs:element name="MailData">
    <xs:complexType>
      <xs:sequence>
        <xs:element maxOccurs="unbounded" name="Mail">
          <xs:complexType>
            <xs:attribute name="id" type="xs:string" use="required" />
            <xs:attribute name="templateId" type="xs:unsignedInt" use="required" />
            <xs:attribute name="mailType" type="xs:string" use="required" />
            <xs:attribute name="iconResourcePath" type="xs:string" use="required" />
            <xs:attribute name="daysLeft" type="xs:unsignedShort" use="required" />
            <xs:attribute name="mailRewardId" type="xs:string" use="optional" />
          </xs:complexType>
        </xs:element>
      </xs:sequence>
    </xs:complexType>
  </xs:element>
</xs:schema>